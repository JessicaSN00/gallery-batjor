[{
    "group": "normal",
    "permissions":[{
        "resource": "*",
        "methods": "*",
        "action": "allow"
    }]
},

{
    "group":"stalker",
    "permissions":[{
        "resource": "/publications",
        "methods": ["GET","POST"],
        "action": "allow"
    },
    {
        "resource": "*",
        "methods": ["GET"],
        "action": "allow"
    }]
},

{
    "group":"anonymous",
    "permissions":[{
        "resource": "/",
        "methods": ["GET"],
        "action": "allow"
    },
    {
        "resource": "/login",
        "methods": ["GET","POST"],
        "action": "allow"
    },
    {
        "resource": "/signup",
        "methods": ["GET","POST"],
        "action": "allow"
    },
    {
        "resource": "/publications",
        "methods": ["GET","POST"],
        "action": "allow"
    },
    {
        "resource": "/images",
        "methods": "*",
        "action": "deny"
    },
    {
        "resource": "/logout",
        "methods": ["GET"],
        "action": "allow"
    }]
}]